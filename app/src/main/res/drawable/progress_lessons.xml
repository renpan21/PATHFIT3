<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#e0e0e0"/> <!-- Background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners for background -->
        </shape>
    </item>
    <!-- Progress layer -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#3F51B5"/> <!-- Progress color -->
            <corners android:radius="8dp"/> <!-- Rounded corners for progress -->
            <stroke
                android:width="2dp"
                android:color="#303F9F"/> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>